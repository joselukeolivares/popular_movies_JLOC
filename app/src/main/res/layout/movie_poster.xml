<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imageMovie"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/posterLocation"
        android:scaleType="centerCrop"


        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yellow_star"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:background="@drawable/ic_yellow_star"
        app:layout_constraintEnd_toEndOf="@+id/imageMovie"
        app:layout_constraintTop_toTopOf="@+id/imageMovie" />


</androidx.constraintlayout.widget.ConstraintLayout>